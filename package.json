{
  "name": "hello-world",
  "description": "Sample NodeJs web application",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "@types/aws-lambda": "^8.10.62",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.1",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "mocha": "5.0.0",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "unit.js": "2.0.0"
  },
  "scripts": {
    "dev": "sam local start-api --env-vars .lambda.env.json",
    "format": "prettier --write src tests",
    "lint": "prettier --check src tests && eslint src tests",
    "test": "mocha -r ts-node/register --recursive tests/**/*.ts",
    "build": "tsc"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "@aws/dynamodb-expressions": "^0.7.3",
    "aws-sdk": "^2.755.0",
    "telegraf": "^3.38.0"
  }
}
